<title>
  <%= title %>
</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
<script src="https://kit.fontawesome.com/00d76a4bef.js" crossorigin="anonymous"></script>
<link rel='stylesheet' href='/stylesheets/style.css'>
<script src="/js/jquery.js"></script>

<%- include('header'); -%>
  <section class="featured">
    <div class="content-wrapper">
      <h1 id="myHeader" class="text-4xl">
        <%= title %>
      </h1>
    </div>
  </section>
  <form action="/addstudent/" method="post" class="flex flex-col bg-amber-100 px-4">
    <input aria-label="Enter student name" type="text" name="stname" placeholder="Student name" required
      autocomplete="off"
      class="font-serif text-sm uppercase text-gray-base w-3/4 mt-2 mr-3 py-2 px-4  border  border-gray-200 rounded mb-1" />
    <input aria-label="Enter fathers name" type="text" name="frname" placeholder="Father's name" autocomplete="off"
      class="text-sm font-serif uppercase text-gray-base w-3/4 mt-2 mr-3 py-2 px-4  border  border-gray-200 rounded mb-1" />
    <input aria-label="Mobile" type="number" name="stnumber" placeholder="Mobile number" autocomplete="off"
      min="5555555555" max="9999999999"
      class="text-sm font-mono text-blue-900 text-gray-base w-3/4 mt-2 mr-3 py-2 px-4  border  border-gray-200 rounded mb-1" />
    <div class="flex-row">
      <input aria-label="Enter roll number" type="text" name="stroll" placeholder="Roll number" required
        autocomplete="off"
        class="text-sm font-mono w-1/6 text-gray-base mt-2 mr-3 py-2 px-4  border  border-gray-200 rounded mb-1" />
      <input aria-label="Enter class" type="text" name="stclass" placeholder="Class" required autocomplete="on"
        class="text-sm font-serif uppercase text-gray-base mt-2 mr-3 w-1/6 py-2 px-4  border  border-gray-200 rounded mb-1" value="<%= class %>" />
      <input aria-label="Section" type="text" name="stsec" placeholder="Section" autocomplete="on"
        class="text-sm font-serif uppercase text-gray-base mt-2 mr-3 py-2 px-4  border  border-gray-200 rounded mb-1" value="<%= sec %>" />
      <select name="cmbGender" id="cmbGender" required
        class="text-sm  mr-3 font-serif  py-2 px-4 border border-gray-200 w-1/6  rounded mb-1">
        <option value="Male" selected>Male</option>
        <option value="Female">Female</option>
      </select>
    </div>
    <div class="flex-row">
      <input aria-label="Address" type="text" name="stadd1" placeholder="Address line1" autocomplete="off"
        class="text-sm uppercase font-serif text-gray-base mt-2 mr-3 py-3 px-4 w-1/3 border  border-gray-200 rounded mb-1" />
      <input aria-label="Address" type="text" name="stadd2" placeholder="Address line2" autocomplete="off"
        class="text-sm font-serif uppercase text-gray-base mt-2 mr-3 py-3 px-4 w-1/3 border  border-gray-200 rounded mb-1" />
    </div>
    <div class="flex-row">
      <input aria-label="Address" type="text" name="stdistrict" placeholder="District" autocomplete="off"
        class="text-sm font-serif text-gray-base w-1/3 mt-2 mr-3 py-3 px-4  border  border-gray-200 rounded mb-1 uppercase" />

      <input aria-label="Pin" type="number" name="stpin" placeholder="Pin code" autocomplete="on" min="100000"
        max="999999"
        class="text-sm font-mono text-blue-900 text-gray-base w-1/3 mt-2 mr-3 py-3 px-4  border  border-gray-200 rounded mb-1" />
    </div>
    <button type="submit"
      class="bg-green-400 py-3 w-3/4 mb-10 mr-3 font-serif  rounded-lg hover:bg-green-600 hover:rounded-full text-sm">
      Submit
    </button>
  </form>

  <%- include('footer'); -%>